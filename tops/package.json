{
  "name": "@b/tops",
  "version": "0.1.0",
  "description": "Topics, Observables, Pipes and States",
  "license": "BSD-3-Clause",
  "keywords": [
    "reactive",
    "topics",
    "pipes",
    "observables",
    "state management"
  ],
  "source": "src/index.ts",
  "main": "build/tops.js",
  "module": "build/tops.mjs",
  "types": "build/types.d.ts",
  "files": [
    "./build",
    "LICENSE",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "debug": "npm run rm && npm run test && npm run parcel:debug",
    "build": "npm run rm && npm run test && npm run parcel:build",
    "test": "npm run tsc && npm run jest",
    "jest": "jest --runInBand",
    "parcel:debug": "parcel build ./src/index.ts --dist-dir debug",
    "parcel:build": "parcel build ./src/index.ts --dist-dir build --no-source-maps --no-cache",
    "tsc": "tsc --noEmit",
    "rm": "rm -rf build/ debug/ coverage/"
  },
  "devDependencies": {
    "@parcel/packager-ts": "^2.8.2",
    "@parcel/transformer-typescript-types": "^2.8.2",
    "@types/jest": "^29.2.5",
    "jest": "^29.3.1",
    "ts-jest": "^29.0.4",
    "typescript": "^4.9.4",
    "parcel": "^2.8.2"
  }
}
